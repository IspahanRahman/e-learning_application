<%- include('partials/header.ejs') %> 
<link rel="stylesheet" href="/css/style.css">
<title>E-Learning</title>
</head>
<body style="background-color: #b8bad6;">
<%- include('partials/navbar.ejs') %> 
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h1 class="text-center display-4 my-4">File Upload</h1>
                <form action="/uploads/fileupload" method="POST" enctype="multipart/form-data">
                    <div class="custom-file mb-3">
                        <input type="file" name="file" id="file" class="custom-file-input">
                        <label for="file" class="custom-file-label">Choose File</label>
                      </div>
                      <input type="submit" value="Submit" class="btn btn-primary btn-block">
                    </form>
                    <hr>
                    <% if(files){ %>
                        <% files.forEach(function(file) { %>
                          <div class="card card-body mb-3">
                            <% if(file.isImage) { %>
                              <img src="image/<%= file.filename %>" alt="">
                              <% } else { %>
                                <%= file.filename %>
                                  <% } %>
                                    <form method="POST" action="/uploads/files/<%= file._id %>?_method=DELETE">
                                      <button class="btn btn-danger btn-block mt-4">Delete</button>
                                    </form>

                                    <form method="GET" action="/uploads/download/<%= file.filename%>?_method=">
                                      <button class="btn btn-primary btn-block mt-4">Download</button>
                                    </form>
                          </div>
                          <% }) %>
                            <% } else { %>
                              <p>No files to show</p>
                              <% } %>  
            </div>
        </div>
    </div>
  <%- include('partials/footer.ejs') %> 