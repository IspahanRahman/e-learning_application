<%- include('../../partials/header.ejs') %>
<link rel="stylesheet" href="/css/style.css">
<title>E-Learning</title>
</head>
<body style="background-color: #b8bad6;">
<%- include('../../partials/navbar.ejs') %>

<div class="container my-container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 box-wrapper">
           <div class="card card-body">
            <h1 class="mb-3">Create A  New Account</h1>
            <form action="/auth/signup" method="POST">
                <div class="form-group">
                    <label>Account Type</label>
                    <br />
                    <select name="type">
                      <option value="student">Student</option>
                      <option value="instructor">Instructor</option>
                    </select>
                  </div>
                <div class="form-group">
                    <label for="username">Enter Your User Name(Must Be Uniq)</label>
                    <input type="text" name="username" id="username" class="form-control <%= error.username ? 'is-invalid' : ''%>" value="<%= value.username ? value.username : ''%>">
                    <div class="invalid-feedback">
                        <%= error.username && error.username %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Enter Your Valid Email</label>
                    <input type="email" name="email" id="email" class="form-control <%= error.email ? 'is-invalid' : ''%>" value="<%= value.email ? value.email : ''%>">
                    <div class="invalid-feedback">
                        <%= error.email && error.email %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Enter Your Strong Password</label>
                    <input type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid' : ''%>" value="<%= value.password ? value.password : ''%>">
                    <div class="invalid-feedback">
                        <%= error.password && error.password %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control  <%= error.confirmPassword ? 'is-invalid' : ''%>"  value="<%= value.password ? value.password : ''%>">
                    <div class="invalid-feedback">
                        <%= error.confirmPassword && error.confirmPassword %>
                    </div>
                </div>
                <button type="submit" class="btn btn-custom">Sign Up</button>
            </form>
            <a href="/auth/login" class="my-3 text-center">Alredy have an account?Login Here</a>
           </div>
        </div>
       
    </div>
</div>
<%- include('../../partials/footer.ejs') %> 