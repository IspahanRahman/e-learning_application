<%- include('../../partials/header.ejs') %>
<link rel="stylesheet" href="/css/style.css">
<title>E-Learning</title>
</head>
<body style="background-color: #b8bad6;">
<%- include('../../partials/navbar.ejs') %>

<div class="container my-container my-5">
  <div class="row justify-content-center">
      <div class="col-md-6 box-wrapper">
         <div class="card card-body">
          <h1 class="mb-3">Login to Your Account</h1>
          <form action="/auth/login" method="POST">
             
              <div class="form-group">
                  <label for="email">Enter Your Valid Email</label>
                  <input type="email" name="email" id="email" class="form-control <%= error.email ? 'is-invalid' : ''%>">
                  <div class="invalid-feedback">
                      <%= error.email && error.email %>
                  </div>
              </div>
              <div class="form-group">
                  <label for="password">Enter Your Strong Password</label>
                  <input type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid' : ''%>">
                  <div class="invalid-feedback">
                      <%= error.password && error.password %>
                  </div>
              </div>
             
              <button type="submit" class="btn btn-primary">Login</button> 
          
          </form>
          <a href="/auth/signup" class="my-3 text-center">Don't have an account?Create one</a>
         </div>
      </div>
     
  </div>
</div>

<%- include('../../partials/footer.ejs') %> 